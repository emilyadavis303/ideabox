<html>
  <head>
    <title>IdeaBox</title>
  </head>
  <body>
    <h1>A Box of Brilliant Ideas</h1>
    <form action='/' method='POST'>
      <p>
        Dollup of Genius:
      </p>
      <input type='text' name='idea_title'/><br/>
      <textarea name='idea_description'></textarea><br/>
      <input type='submit' value='Create Brilliance'/>
    </form>

    <h2>Look at all of your brilliant ideas!</h2>

    <ul>
      <% ideas.each do |idea| %>
        <li>
          <h3><%= idea.title %>:</h3>
          <%= idea.description %>
        </li>
      <% end %>
    </ul>
  </body>
</html>
